<main class="main-content">
  <div class="container-fluid">
    <h3 class="mb-4">
      <a href="/admin/master-data"><i class="fa fa-cc-mastercard me-2"></i>Gestión de Datos Maestros</a> / Tipos de Programas
    </h3>

    <!-- Incluir partial de flash messages -->
    <%= render 'partials/flash_messages' %>

    <div class="card mb-4">
      <div class="card-header">
        <h6 class="mb-0">
          <i class="fa fa-list me-2"></i>
          Lista de Tipos de de Programas
        </h6>
      </div>
      <div class="card-body">
        <div class="d-flex justify-content-end mb-3">
          <a href="/admin/program-type/new" class="btn btn-success">
            <i class="fa fa-plus"></i> Agregar Tipo de Programa
          </a>
        </div>

        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Nombre</th>
              </tr>
            </thead>
            <tbody>
              <% if @program_types.any? %>
                <% @program_types.each do |program_type| %>
                  <tr>
                    <td><%= program_type.name %></td>
                    <td class="text-end btn-group-sm">
                      <a href="/admin/program-type/<%= program_type.id %>/edit" class="btn btn-outline-secondary me-1">
                        <i class="fa fa-edit"></i> Editar
                      </a>
                      <a href="/admin/program-type/<%= program_type.id %>/delete" class="btn btn-outline-danger" data-method="delete"
                        onclick="return confirm('¿Estás seguro de eliminar este tipo de programa?');">
                        <i class="fa fa-trash"></i> Eliminar
                      </a>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="4" class="text-center">No se encontraron tipos de programas.</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
