<main class="main-content">
  <div class="container-fluid">
    <h3 class="mb-4">
      <a href="/admin/master-data"><i class="fa fa-cc-mastercard me-2"></i>Gestión de Datos Maestros</a> / Periodos Académicos
    </h3>

    <!-- Incluir partial de flash messages -->
    <%= render 'partials/flash_messages' %>

    <div class="card mb-4">
      <div class="card-header">
        <h6 class="mb-0">
          <i class="fa fa-list me-2"></i>
          Lista de Periodos
        </h6>
      </div>
      <div class="card-body">
        <div class="d-flex justify-content-end mb-3">
          <a href="/admin/period/new" class="btn btn-success">
            <i class="fa fa-plus"></i> Agregar Registro
          </a>
        </div>

        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th class="text-end">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% if @periods.any? %>
                <% @periods.each do |period| %>
                  <tr>
                    <td><%= period.name %></td>
                    <td><%= period.init_date %></td>
                    <td><%= period.end_date %></td>
                    <td class="text-end btn-group-sm">
                      <a href="/admin/period/<%= period.id %>/edit" class="btn btn-outline-secondary me-1">
                        <i class="fa fa-edit"></i> Editar
                      </a>
                      <a href="/admin/period/<%= period.id %>/delete" class="btn btn-outline-danger" data-method="delete"
                        data-confirm="¿Estás seguro de eliminar este periodo?"
                        onclick="return confirm('¿Estás seguro de eliminar este periodo?');">
                        <i class="fa fa-trash"></i> Eliminar
                      </a>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="4" class="text-center">No se encontraron periodos.</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
